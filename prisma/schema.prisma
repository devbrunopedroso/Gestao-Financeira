// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Usuários do sistema (autenticação Google)
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  blocked       Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth
  accounts Account[]
  sessions Session[]

  // Relacionamentos
  accountMemberships AccountMember[]
  createdAccounts    FinancialAccount[] @relation("AccountCreator")

  @@map("users")
}

// NextAuth - Account
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth - Session
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth - VerificationToken
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Conta Financeira
model FinancialAccount {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relacionamentos
  creatorId        String
  creator          User                @relation("AccountCreator", fields: [creatorId], references: [id], onDelete: Cascade)
  members          AccountMember[]
  fixedIncomes     FixedIncome[]
  extraIncomes     ExtraIncome[]
  fixedExpenses    FixedExpense[]
  variableExpenses VariableExpense[]
  categories       Category[]
  piggyBanks       PiggyBank[]
  assets           Asset[]
  invitations      AccountInvitation[]
  categoryBudgets  CategoryBudget[]
  financialGoals   FinancialGoal[]

  @@map("financial_accounts")
}

// Membros da conta (permissões)
model AccountMember {
  id        String      @id @default(cuid())
  role      AccountRole @default(VIEWER)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relacionamentos
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  accountId String
  account   FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([userId, accountId])
  @@map("account_members")
}

enum AccountRole {
  ADMIN
  EDITOR
  VIEWER
}

// Convites para conta
model AccountInvitation {
  id        String      @id @default(cuid())
  email     String
  role      AccountRole @default(VIEWER)
  token     String      @unique
  expiresAt DateTime
  accepted  Boolean     @default(false)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relacionamentos
  accountId String
  account   FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("account_invitations")
}

// Renda Fixa
model FixedIncome {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(10, 2)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  accountId String
  account   FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("fixed_incomes")
}

// Renda Extra
model ExtraIncome {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(10, 2)
  description String?
  month       Int
  year        Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  accountId String
  account   FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("extra_incomes")
}

// Despesa Fixa
model FixedExpense {
  id          String    @id @default(cuid())
  amount      Decimal   @db.Decimal(10, 2)
  description String
  startDate   DateTime
  endDate     DateTime? // null = sem prazo
  dueDay      Int?      // dia do vencimento (1-31)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relacionamentos
  accountId  String
  account    FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  categoryId String?
  category   Category?        @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  payments   FixedExpensePayment[]

  @@map("fixed_expenses")
}

// Pagamento mensal de despesa fixa (marcar como pago)
model FixedExpensePayment {
  id             String   @id @default(cuid())
  month          Int
  year           Int
  paidAt         DateTime @default(now())

  fixedExpenseId String
  fixedExpense   FixedExpense @relation(fields: [fixedExpenseId], references: [id], onDelete: Cascade)

  @@unique([fixedExpenseId, month, year])
  @@map("fixed_expense_payments")
}

// Despesa Variável
model VariableExpense {
  id          String   @id @default(cuid())
  amount      Decimal  @db.Decimal(10, 2)
  description String?
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  accountId  String
  account    FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)
  categoryId String?
  category   Category?        @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@map("variable_expenses")
}

// Categoria
model Category {
  id          String   @id @default(cuid())
  name        String
  description String?
  isDefault   Boolean  @default(false)
  color       String? // hex color
  icon        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relacionamentos
  accountId        String?
  account          FinancialAccount? @relation(fields: [accountId], references: [id], onDelete: Cascade)
  fixedExpenses    FixedExpense[]
  variableExpenses VariableExpense[]
  budgets          CategoryBudget[]

  @@map("categories")
}

// Categoria de Patrimônio
enum AssetCategory {
  IMOVEL
  VEICULO
  POUPANCA
  TESOURO_DIRETO
  RENDA_FIXA
  FUNDOS_IMOBILIARIOS
  ACOES
  CRIPTOMOEDAS
  PREVIDENCIA
  INVESTIMENTO // legado - manter para compatibilidade
  OUTRO
}

// Status do Patrimônio
enum AssetStatus {
  QUITADO
  EM_ANDAMENTO
}

// Patrimônio
model Asset {
  id              String        @id @default(cuid())
  name            String
  description     String?
  estimatedValue  Decimal       @db.Decimal(10, 2)
  status          AssetStatus   @default(EM_ANDAMENTO)
  category        AssetCategory @default(OUTRO)
  yieldRate       Decimal?      @db.Decimal(5, 2) // rendimento anual em % (ex: 12.00 = 12% a.a.)
  endDate         DateTime?                       // data final para projeção
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  // Relacionamentos
  accountId       String
  account         FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  // Quando em andamento, vincula a uma caixinha para tracking de aportes
  piggyBankId     String?       @unique
  piggyBank       PiggyBank?    @relation(fields: [piggyBankId], references: [id], onDelete: SetNull)

  @@map("assets")
}

// Caixinha / Propósito
model PiggyBank {
  id            String    @id @default(cuid())
  name          String
  description   String?
  targetAmount  Decimal   @db.Decimal(10, 2)
  currentAmount Decimal   @default(0) @db.Decimal(10, 2)
  startDate     DateTime  @default(now())
  endDate              DateTime? // pode ser definido por meses ou data
  months               Int? // duração em meses (alternativa ao endDate)
  monthlyContribution  Decimal?  @db.Decimal(10, 2) // valor mensal que conta como despesa fixa
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  // Relacionamentos
  accountId     String
  account       FinancialAccount       @relation(fields: [accountId], references: [id], onDelete: Cascade)
  transactions  PiggyBankTransaction[]
  sharedWith    PiggyBankShare[]
  skippedMonths PiggyBankSkippedMonth[]
  asset         Asset?

  @@map("piggy_banks")
}

// Transações da Caixinha (aportes e retiradas)
model PiggyBankTransaction {
  id          String          @id @default(cuid())
  amount      Decimal         @db.Decimal(10, 2)
  type        TransactionType
  description String?
  date        DateTime        @default(now())
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  // Relacionamentos
  piggyBankId String
  piggyBank   PiggyBank @relation(fields: [piggyBankId], references: [id], onDelete: Cascade)

  @@map("piggy_bank_transactions")
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
}

// Compartilhamento de Caixinha
model PiggyBankShare {
  id        String      @id @default(cuid())
  email     String
  role      AccountRole @default(VIEWER)
  token     String      @unique
  expiresAt DateTime?
  accepted  Boolean     @default(false)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relacionamentos
  piggyBankId String
  piggyBank   PiggyBank @relation(fields: [piggyBankId], references: [id], onDelete: Cascade)

  @@map("piggy_bank_shares")
}

// Meses pulados da caixinha (quando o usuario nao contribuiu naquele mes)
model PiggyBankSkippedMonth {
  id          String   @id @default(cuid())
  month       Int
  year        Int
  createdAt   DateTime @default(now())

  // Relacionamentos
  piggyBankId String
  piggyBank   PiggyBank @relation(fields: [piggyBankId], references: [id], onDelete: Cascade)

  @@unique([piggyBankId, month, year])
  @@map("piggy_bank_skipped_months")
}

// Orçamento por Categoria
model CategoryBudget {
  id         String   @id @default(cuid())
  amount     Decimal  @db.Decimal(10, 2)
  month      Int
  year       Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relacionamentos
  categoryId String
  category   Category         @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  accountId  String
  account    FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([categoryId, accountId, month, year])
  @@map("category_budgets")
}

// Tipo de Meta Financeira
enum GoalType {
  EMERGENCY_FUND
  SAVINGS_RATE
  CUSTOM
}

// Meta Financeira
model FinancialGoal {
  id           String    @id @default(cuid())
  name         String
  type         GoalType  @default(CUSTOM)
  targetValue  Decimal   @db.Decimal(10, 2)
  currentValue Decimal   @default(0) @db.Decimal(10, 2)
  deadline     DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relacionamentos
  accountId String
  account   FinancialAccount @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("financial_goals")
}
